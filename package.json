{
  "name": "kevin-wessa",
  "version": "1.7.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build:start": "next build && next start",
    "lint": "next lint",
    "setup:clean": "rm -rf node_modules .next",
    "setup:reinstall": "rm -rf node_modules .next pnpm-lock.yaml && pnpm store prune && pnpm install && pnpm generate:importmap && pnpm generate:types",
    "payload:config": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "generate:importmap": "payload generate:importmap",
    "generate:types": "payload generate:types",
    "db:generate": "pnpm payload migrate:create",
    "db:migrate": "pnpm payload migrate",
    "db:status": "pnpm payload migrate:status",
    "db:down": "pnpm payload migrate:down",
    "db:sync:dump": "echo '🔒 Pulling from production...' && source .env.production && pg_dump \"$POSTGRES_URL\" > prod_dump.sql",
    "db:sync:restore": "echo '💾 Restoring to local...' && source .env.local && [[ \"$POSTGRES_URL\" == *\"localhost\"* ]] && psql \"$POSTGRES_URL\" < prod_dump.sql || (echo '⚠️  Error: Not a local database' && exit 1)",
    "db:sync:full": "echo '🔄 Syncing database...' && pnpm db:sync:dump && pnpm db:sync:restore",
    "db:reset": "echo '🗑️  Resetting local database...' && dropdb kwessadb && createdb kwessadb && pnpm db:sync:full",
    "validate:config": "tsx scripts/validateConfig.ts",
    "validate:blocks": "tsx scripts/validateBlocks.ts",
    "validate:packages": "tsx scripts/validatePackages.ts",
    "ci": "pnpm payload migrate && pnpm build"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.15.1",
